/* pages/position/position.wxss */
.position-detail-title{
    width: 100%;
    height: 80rpx;
    border-bottom: 1px solid #ccc;
    position:fixed;
    top: 0;
    background-color: #efefef;
    display: flex;
    justify-content: center;
    align-items: center;

}
.position-content{
    width: 100%;
    margin-top: 80rpx;
    margin-bottom: 100rpx;
}
.position-content view{
    width: 100%;
}
.main-info{
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.main-info text{
    padding-top: 10rpx;
}
.main-info .position-salary{
    color: #e58026;
}
.main-info .position-company{
    color: #666 ;
}
.short-info{
    /*background-color: red;*/
}
.short-info ul{
    padding-left: 20rpx;
    display: flex;
    flex-wrap: wrap;
}
.short-info ul li{
    width: 33%;
    font-size: 32rpx;
    color: #666;
    padding: 10rpx 0;
    display: flex;
    /*justify-content: space-between;*/
    align-items: center;
    box-sizing: border-box;
}
.short-info ul li image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.work-require{
    width: 100%;
    margin-bottom: 30rpx;
}
.work-require ul{
    width: 100%;
    display: flex;
    flex-direction: row;
}
.work-require ul li{
    border-bottom: 1px solid;
    border-top: 1px solid;
    border-right: 1px solid;
    border-color: #cccccc;
    font-size: 32rpx;
    padding: 10rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.work-require ul li text:first-child{
    color: #666;
}
.work-require ul li:last-child{
    border-right:none;
}
.position-line{
    background-color: #efefef;
    width: 100%;
    height: 60rpx;
    padding-left:40rpx;
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #666;
}
.position-info{
    padding: 40rpx;
    display: flex;
    flex-direction:column;
}
.position-info .position-info-title{
    font-weight: bold;
}
.submit-button{
    position:fixed;
    bottom:0;
    width: 100%;
}
.submit-button button{
    color: #fff;
    background-color: #e58026;
    height: 100rpx;
}